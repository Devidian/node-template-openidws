{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./bin",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": false,
		"esModuleInterop": true,
		"target": "esnext",
		"module": "commonjs",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable"
		]
	},
	"exclude": [
		"./src/lib/mongo",
		"./src/lib/models/MongoConfig.ts",
		"./src/lib/tools/toRealTypeMongo.ts"
	]
}
